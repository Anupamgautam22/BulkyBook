@model IEnumerable<BulkyBookWeb.Models.OrderHeader>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Order Header List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New
            </a>
        </div>
    </div>
    <br /><br />

    <style>
        .table-text-white th,
        .table-text-white td {
            color: white; /* Set the font color to white for both table headers and data cells */
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .btn-icon-text {
            display: inline-flex;
            align-items: center;
        }
    </style>

    <table class="table table-bordered table-striped table-text-white" style="width:100%">
        <thead>
            <tr>
                <th>
                    ApplicationUser
                </th>
                <th>
                    Order Date
                </th>
                <th>
                    Shipping Date
                </th>
                <th>
                    Order Total
                </th>
                <th>
                    Order Status
                </th>
                <th>
                    Payment Status
                </th>
                <th>
                    Tracking Number
                </th>
                <th>
                    Carrier
                </th>
                <th>
                    Payment Date
                </th>
                <th>
                    Payment Due Date
                </th>
                <th>
                    SessionId
                </th>
                <th>
                    Payment IntentId
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Street Address
                </th>
                <th>
                    City
                </th>
                <th>
                    State
                </th>
                <th>
                    Postal Code
                </th>
                <th>
                    Name
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @Html.DisplayFor(modelItem => item.ApplicationUser.Id)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.OrderDate)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.ShippingDate)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.OrderTotal)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.OrderStatus)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.PaymentStatus)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.TrackingNumber)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.Carrier)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.PaymentDate)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.PaymentDueDate)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.SessionId)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.PaymentIntentId)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.StreetAddress)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.State)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.PostalCode)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm btn-icon-text mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm btn-icon-text mx-2">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-icon-text mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp; Create New
        </a>
    </div>
</div>
