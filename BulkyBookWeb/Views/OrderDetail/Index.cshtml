@model IEnumerable<BulkyBookWeb.Models.OrderDetail>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Order Detail List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New
            </a>
        </div>
    </div>
    <br /><br />

    <style>
        .table-text-white th,
        .table-text-white td {
            color: white; /* Set the font color to white for both table headers and data cells */
        }

        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

        .btn-icon-text {
            display: inline-flex;
            align-items: center;
        }
    </style>

    <table class="table table-bordered table-striped table-text-white" style="width:100%">
        <thead>
            <tr>
                <th>
                    Order Header
                </th>
                <th>
                    Product
                </th>
                <th>
                    Count
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="25%">
                        @Html.DisplayFor(modelItem => item.OrderHeader.City)
                    </td>
                    <td width="25%">
                        @Html.DisplayFor(modelItem => item.Product.Author)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td width="10%">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm btn-icon-text mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm btn-icon-text mx-2">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm btn-icon-text mx-2">
                                <i class="bi bi-trash-fill"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp; Create New
        </a>
    </div>
</div>
